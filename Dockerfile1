# Utilisez l'image MariaDB 10.6
FROM mariadb:10.6

# Définit des options spécifiques pour MariaDB
CMD ["--character_set_client=utf8", "--character-set-server=utf8mb4", "--collation-server=utf8mb4_unicode_ci"]

# Définit les variables d'environnement pour la configuration de MariaDB
ENV MYSQL_DATABASE=dolibarr \
    MYSQL_USER=dolibarr \
    MYSQL_PASSWORD=dolibarr \
    MYSQL_RANDOM_ROOT_PASSWORD=yes

# Définit un point de montage pour les données de la base de données
VOLUME ./dolibarr_db:/var/lib/mysql

