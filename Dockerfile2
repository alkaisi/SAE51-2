# Utilisez l'image Dolibarr 14.0
FROM upshift/dolibarr:14.0

# Définit les variables d'environnement pour la configuration de Dolibarr
ENV DOLI_ADMIN_LOGIN=admin \
    DOLI_ADMIN_PASSWORD=p4ssw0rd \
    DOLI_DB_HOST=mariadb \
    DOLI_DB_NAME=dolibarr \
    DOLI_DB_USER=dolibarr \
    DOLI_DB_PASSWORD=dolibarr \
    TZ=Europe/MADRID \
    LANG=fr_FR

# Définit des points de montage pour les données de Dolibarr
VOLUME ./doli_html:/var/www/html
VOLUME ./doli_docs:/var/www/documents

